<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Incluir Apólice - Intracor</title>
    <link rel="stylesheet" href="/css/style.css">
    <link rel="stylesheet" href="/css/apolices.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>

    <div class="main-wrapper">
        <%- include('partials/header') %>

        <nav class="main-nav">
            <ul>
                <li><a href="/clientes"><i class="fa-solid fa-users"></i> Clientes</a></li>
                <li class="active"><a href="/apolices"><i class="fa-solid fa-file-invoice"></i> Apólices</a></li>
                <li><a href="/endossos"><i class="fa-solid fa-file-pen"></i> Endossos</a></li>
            </ul>
            <div class="quoteflex-logo-nav" style="background-color: #01212B;">
                <img src="/img/LogoQuoteFlexBranco.png" alt="QuoteFlex Logo">
            </div>
        </nav>

        <main class="content-area">
            <div class="form-container">
                <h1>Incluir Nova Apólice</h1>
                
                <form id="form-apolice" action="/apolices/salvar" method="POST" enctype="multipart/form-data">
                    <div class="form-grid">
                        <!-- Dados Básicos -->
                        <div class="form-section">
                            <h3>Dados Básicos</h3>
                            
                            <div class="form-group">
                                <label for="cliente">Cliente *</label>
                                <select id="cliente" name="clienteNome" required>
                                    <option value="">Selecione um cliente</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="nApolice">Número da Apólice *</label>
                                <input type="text" id="nApolice" maxlength="16"   name="nApolice" required>
                            </div>

                            <div class="form-group">
                                <label for="tipoApolice">Tipo de Apólice *</label>
                                <select id="tipoApolice" name="tipoApoliceId" required>
                                    <option value="">Selecione o tipo</option>
                                </select>
                            </div>

                            <div class="form-group">
                                <label for="ramoApolice">Ramo *</label>
                                <select id="ramoApolice" name="ramoId" required>
                                    <option value="">Selecione o ramo</option>
                                </select>
                            </div>
                        </div>

                        <!-- Valores e Pagamento -->
                        <div class="form-section">
                            <h3>Valores e Pagamento</h3>
                            
                            <div class="form-group">
                                <label for="premioTotal">Prêmio Total *</label>
                                <input type="text" id="premioTotal" name="premioTotal" placeholder="R$ 0,00" required>
                            </div>

                            <div class="form-group">
                                <label for="parcelas">Parcelas *</label>
                                <input type="text" id="parcelas" name="parcelas" placeholder="Ex: 12x" required>
                            </div>

                            <div class="form-group">
                                <label for="tipoPagamento">Forma de Pagamento *</label>
                                <select id="tipoPagamento" name="formaPagamentoId" required>
                                    <option value="">Selecione a forma</option>
                                </select>
                            </div>
                        </div>

                        <!-- Vigência -->
                        <div class="form-section">
                            <h3>Vigência</h3>
                            
                            <div class="form-group">
                                <label for="vigenciaInicio">Início da Vigência *</label>
                                <input type="date" id="vigenciaInicio" name="vigenciaInicio" required>
                            </div>

                            <div class="form-group">
                                <label for="vigenciaFinal">Fim da Vigência *</label>
                                <input type="date" id="vigenciaFinal" name="vigenciaFinal" required>
                            </div>
                        </div>

                        <!-- Anexos -->
                        <div class="form-section">
                            <h3>Anexos</h3>
                            
                            <div class="form-group">
                                <label for="anexo">Anexar Documento</label>
                                <input type="file" id="anexo" name="anexo" accept=".pdf,.jpg,.jpeg,.png,.doc,.docx">
                                <small>Formatos aceitos: PDF, JPG, PNG, DOC (Max: 10MB)</small>
                            </div>
                        </div>
                    </div>

                    <div class="form-actions">
                        <button type="button" class="btn-secondary" onclick="window.history.back()">Cancelar</button>
                        <button type="submit" class="btn-primary">Salvar Apólice</button>
                    </div>
                </form>
            </div>
        </main>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', function() {
            carregarClientes();
            carregarTiposApolice();
            carregarRamosApolice();
            carregarTiposPagamento();
            
            // Máscara para o campo de prêmio
            const premioInput = document.getElementById('premioTotal');
            premioInput.addEventListener('input', formatarMoeda);
        });

        // Função para formatar moeda
        function formatarMoeda(event) {
            let value = event.target.value.replace(/\D/g, '');
            value = (value / 100).toFixed(2) + '';
            value = value.replace(".", ",");
            value = value.replace(/(\d)(\d{3})(\d{3}),/g, "$1.$2.$3,");
            value = value.replace(/(\d)(\d{3}),/g, "$1.$2,");
            event.target.value = 'R$ ' + value;
        }

        // Funções para carregar dados dos selects
        async function carregarClientes() {
            try {
                const response = await fetch('/clientes/getClientes');
                const data = await response.json();
                
                const select = document.getElementById('cliente');
                if (data.success && data.clientes) {
                    select.innerHTML = '<option value="">Selecione um cliente</option>';
                    data.clientes.forEach(cliente => {
                        const option = document.createElement('option');
                        option.value = cliente.nome;
                        option.textContent = cliente.nome;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Erro ao carregar clientes:', error);
            }
        }

        async function carregarTiposApolice() {
            try {
                const response = await fetch('/apolices/getTiposApolice');
                const data = await response.json();
                
                const select = document.getElementById('tipoApolice');
                if (data.success && data.tipos) {
                    select.innerHTML = '<option value="">Selecione o tipo</option>';
                    data.tipos.forEach(tipo => {
                        const option = document.createElement('option');
                        option.value = tipo.id;
                        option.textContent = tipo.descricao;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Erro ao carregar tipos de apólice:', error);
            }
        }

        async function carregarRamosApolice() {
            try {
                const response = await fetch('/apolices/getRamosApolice');
                const data = await response.json();
                
                const select = document.getElementById('ramoApolice');
                if (data.success && data.ramos) {
                    select.innerHTML = '<option value="">Selecione o ramo</option>';
                    data.ramos.forEach(ramo => {
                        const option = document.createElement('option');
                        option.value = ramo.id;
                        option.textContent = ramo.descricao;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Erro ao carregar ramos de apólice:', error);
            }
        }

        async function carregarTiposPagamento() {
            try {
                const response = await fetch('/apolices/getTiposPagamento');
                const data = await response.json();
                
                const select = document.getElementById('tipoPagamento');
                if (data.success && data.tiposPagamento) {
                    select.innerHTML = '<option value="">Selecione a forma</option>';
                    data.tiposPagamento.forEach(tipo => {
                        const option = document.createElement('option');
                        option.value = tipo.id;
                        option.textContent = tipo.descricao;
                        select.appendChild(option);
                    });
                }
            } catch (error) {
                console.error('Erro ao carregar tipos de pagamento:', error);
            }
        }

        // Submit do formulário
        document.getElementById('form-apolice').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const formData = new FormData(this);
            
            try {
                const response = await fetch('/apolices/salvar', {
                    method: 'POST',
                    body: formData
                });
                
                const result = await response.json();
                
                if (result.success) {
                    alert('Apólice salva com sucesso!');
                    window.location.href = '/apolices';
                } else {
                    alert('Erro ao salvar apólice: ' + result.message);
                }
            } catch (error) {
                console.error('Erro:', error);
                alert('Erro ao salvar apólice.');
            }
        });
    </script>
</body>
</html>