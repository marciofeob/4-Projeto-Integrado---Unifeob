<!DOCTYPE html>
<html lang="pt-br">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Apólices - Intracor</title>

    <link rel="stylesheet" href="/css/style.css">

    <link rel="stylesheet" href="/css/apolices.css">

    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css">
</head>
<body>

    <div class="main-wrapper">
        <%- include('partials/header') %>

        <nav class="main-nav">
            <ul>
                <li><a href="/clientes"><i class="fa-solid fa-users"></i> Clientes</a></li>
                <li class="active"><a href="/apolices"><i class="fa-solid fa-file-invoice"></i> Apólices</a></li>
                <li><a href="/endossos"><i class="fa-solid fa-file-pen"></i> Endossos</a></li>
            </ul>
            <div class="quoteflex-logo-nav" style="background-color: #01212B;">
                <img src="/img/LogoQuoteFlexBranco.png" alt="QuoteFlex Logo">
            </div>
        </nav>

        <div class="filter-bar">
            <div class="filter-left">
                <select name="cia">
                    <option value="">CIA</option>
                    <option value="porto">Porto Seguro</option>
                </select>
                <select name="ramo">
                    <option value="">Ramo</option>
                    <option value="auto">Auto</option>
                </select>
            </div>
            
            <div class="filter-center-search">
                <div class="search-box">
                    <input type="text" placeholder="N° Apólice">
                    <button><i class="fa-solid fa-magnifying-glass"></i></button>
                </div>
            </div>

            <div class="filter-bar">
                <div class="filter-right">
                    <a href="/apolices/incluir" class="btn-primary-incluir">
                        <i class="fa-solid fa-plus"></i> Incluir
                    </a>
                </div>
</div>
        </div>

        <main class="content-area">
            <div class="apolice-list-container">
                <div class="apolice-list-container">
                <ul id="lista-apolices">
                    <li style="text-align: center; padding: 20px;">Carregando apólices...</li>
                </ul>
            </div>
            </div>
        </main>
    </div>
    <script>
        document.addEventListener('DOMContentLoaded', carregarApolices);

        async function carregarApolices() {
            try {
                const response = await fetch('/apolices/getApolices');
                const data = await response.json();

                if (data.success) {
                    atualizarLista(data.apolices);
                } else {
                    console.error('Erro ao carregar apólices:', data.error);
                    document.getElementById('lista-apolices').innerHTML = '<li>Erro ao carregar dados.</li>';
                }
            } catch (error) {
                console.error('Erro de conexão:', error);
            }
        }

        function atualizarLista(apolices) {
            const ul = document.getElementById('lista-apolices');
            
            if (apolices && apolices.length > 0) {
                ul.innerHTML = apolices.map(ap => {
                    // Verifica se existe arquivo
                    const temArquivo = ap.arquivo && ap.arquivo.length > 0;
                    
                    // Cria o link correto ou # se não tiver
                    const linkArquivo = temArquivo ? `/uploads/${ap.arquivo}` : '#';
                    
                    // Define a cor: Azul se tiver arquivo, Cinza se não tiver
                    const estiloIcone = temArquivo ? 'color: #0d6efd; cursor: pointer;' : 'color: #ccc; cursor: not-allowed;';
                    const titulo = temArquivo ? 'Visualizar PDF' : 'Sem arquivo anexado';

                    return `
                    <li>
                        <div class="apolice-item">
                            <div class="apolice-info">
                               <i class="fa-solid fa-file-pdf" style="color: #dc3545; font-size: 24px; margin-right: 15px;"></i>
                               <div style="display: flex; flex-direction: column;">
                                   <span style="font-weight: bold; font-size: 16px;">${ap.cliente}</span>
                                   <span style="font-size: 13px; color: #666;">${ap.ramo} - Apólice: ${ap.numero}</span>
                               </div>
                            </div>
                            <div class="apolice-actions">
                                <a href="#" title="Anexar"><i class="fa-solid fa-paperclip"></i></a>
                                
                                <a href="${linkArquivo}" target="_blank" title="${titulo}" style="${estiloIcone}">
                                    <i class="fa-solid fa-eye"></i>
                                </a>
                                
                                <a href="${linkArquivo}" download title="Download" style="${estiloIcone}">
                                    <i class="fa-solid fa-download"></i>
                                </a>
                            </div>
                        </div>
                    </li>
                `}).join('');
            } else {
                ul.innerHTML = '<li style="text-align: center; padding: 20px;">Nenhuma apólice encontrada.</li>';
            }
        }
    </script>
</body>
</html>